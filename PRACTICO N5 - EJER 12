#include <iostream>
using namespace std;

bool esBisiesto(int anio) {
    return (anio % 400 == 0) || (anio % 4 == 0 && anio % 100 != 0);
}

bool validarFecha(int dia, int mes, int anio) {
    if (anio < 1) return false;         
    if (mes < 1 || mes > 12) return false; 

    int diasMes[] = {0,31,28,31,30,31,30,31,31,30,31,30,31};

    if (esBisiesto(anio)) diasMes[2] = 29; 

    if (dia < 1 || dia > diasMes[mes]) return false; 

    return true;
}

int main() {
    int dia, mes, anio;
    cout << "Ingrese dia: ";
    cin >> dia;
    cout << "Ingrese mes: ";
    cin >> mes;
    cout << "Ingrese anio: ";
    cin >> anio;

    if (validarFecha(dia, mes, anio)) {
        cout << "Fecha valida.\n";
    } else {
        cout << "Fecha invalida.\n";
    }

    return 0;
}
