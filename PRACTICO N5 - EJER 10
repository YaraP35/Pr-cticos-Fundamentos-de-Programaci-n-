#include <iostream>
#include <string>
using namespace std;

void convertirARomanos(int N, string &resultado) {
    int valores[] =    {1000, 900, 500, 400, 100,  90,  50,  40,  10,   9,   5,   4,   1};
    string simbolos[] = {"M", "CM","D", "CD","C", "XC","L", "XL","X", "IX","V", "IV","I"};

    resultado = "";
    for (int i = 0; i < 13; ++i) {
        while (N >= valores[i]) {
            N -= valores[i];
            resultado += simbolos[i];
        }
    }
}

int main() {
    int N;
    cout << "Ingrese un numero entero (1-3999): ";
    cin >> N;

    if (N < 1 || N > 3999) {
        cout << "Numero fuera de rango.\n";
        return 1;
    }

    string romano;
    convertirARomanos(N, romano);

    cout << "Numero romano: " << romano << endl;
    return 0;
}
