#include <stdio.h>

int main() {
    int N, digito, valido;

    printf("Ingrese un numero: ");
    scanf("%d", &N);

    valido = 1;

    printf("\nDigitos: ");
    while (N > 0) {
        digito = N % 10;
        printf("%d ", digito);
        
        if (digito >= 8) {
            printf("\n\nEl digito %d no corresponde a la base 8\n", digito);
            valido = 0;
        }
        
        N = N / 10;
    }

    if (valido) {
        printf("\n\nTodos los digitos son validos para base 8\n");
    }

    return 0;
}
