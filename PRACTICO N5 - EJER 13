#include <iostream>
#include <cmath>
using namespace std;

double redondear(double R, int n) {
    double factor = pow(10.0, n);
    return round(R * factor) / factor;
}

int main() {
    double R;
    int n;
    cout << "Ingrese un numero real: ";
    cin >> R;
    cout << "Ingrese numero de decimales para redondear: ";
    cin >> n;

    double resultado = redondear(R, n);
    cout << "Numero redondeado: " << resultado << endl;

    return 0;
}
