#include <stdio.h>

int main() {
    int N, u, d, c, m;
    
    printf("Ingrese un numero entero positivo menor que 10000: ");
    scanf("%d", &N);
    
    if (N < 0 || N >= 10000) {
        printf("Numero fuera de rango\n");
        return 0;
    }
    
    u = N % 10;
    d = (N / 10) % 10;
    c = (N / 100) % 10;
    m = N / 1000;
    
    printf("Unidades: %d\n", u);
    printf("Decenas: %d\n", d);
    printf("Centenas: %d\n", c);
    printf("Unidades de mil: %d\n", m);
    
    return 0;
}
