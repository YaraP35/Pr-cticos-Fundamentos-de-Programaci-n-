#include <iostream>
#include <string>
using namespace std;

void leerTexto(string &texto) {
    cout << "Ingrese un texto: ";
    getline(cin, texto);
}

string convertirMayusculas(string texto) {
    for (int i = 0; i < texto.length(); i++) {
        texto[i] = toupper(texto[i]);
    }
    return texto;
}

void mostrarTexto(string textoOriginal, string textoMayusculas) {
    cout << "Texto original: " << textoOriginal << endl;
    cout << "Texto en mayusculas: " << textoMayusculas << endl;
}

int main() {
    string texto;
    string textoMayusculas;
    
    leerTexto(texto);
    textoMayusculas = convertirMayusculas(texto);
    mostrarTexto(texto, textoMayusculas);
    
    return 0;
}
