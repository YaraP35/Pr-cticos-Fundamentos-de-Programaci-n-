#include <iostream>
#include <string>
using namespace std;

void leerTexto(string &texto) {
    cout << "Ingrese un texto: ";
    getline(cin, texto);
}


string convertirMayusculas(string texto) {
    for (int i = 0; i < texto.length(); i++) {
        texto[i] = toupper(texto[i]);
    }
    return texto;
}

void mostrarTexto(string texto) {
    cout << "Texto en mayusculas: " << texto << endl;
}

int main() {
    string texto;
    
    leerTexto(texto);
    texto = convertirMayusculas(texto);
    mostrarTexto(texto);
    
    return 0;
}
