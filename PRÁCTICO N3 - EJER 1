int main() {
    int N, suma, digito;

    printf("Ingrese un numero: ");
    scanf("%d", &N);

    suma = 0;

    printf("\nDigitos: ");
    while (N > 0) {
        digito = N % 10;
        printf("%d ", digito);
        suma = suma + digito;
        N = N / 10;
    }

    printf("\nSuma de digitos: %d\n", suma);

    return 0;
}
