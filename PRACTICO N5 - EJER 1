#include <iostream>
#include <cmath>
#include <iomanip>
using namespace std;

double POTEN(double x, double y) {
    return pow(x, y);
}

int main() {
    double x, y;
    cout << "Ingrese la base x: ";
    cin >> x;
    cout << "Ingrese el exponente y: ";
    cin >> y;

    double resultado = POTEN(x, y);

    cout << fixed << setprecision(6);
    cout << x << " ^ " << y << " = " << resultado << endl;
    return 0;
}
