#include <stdio.h>

int main() {
    int N, digito, contador;

    printf("Ingrese un numero: ");
    scanf("%d", &N);

    contador = 0;

    printf("\nDigitos pares: ");
    while (N > 0) {
        digito = N % 10;
        if (digito % 2 == 0) {
            printf("%d ", digito);
            contador++;
        }
        N = N / 10;
    }

    printf("\nCantidad de digitos pares: %d\n", contador);

    return 0;
}
