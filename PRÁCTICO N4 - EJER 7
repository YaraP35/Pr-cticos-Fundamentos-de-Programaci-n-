#include <stdio.h>

int main() {
    float a, b, c, d, e, f, determinante, x, y;
    
    printf("Ingrese coeficientes para el sistema:\n");
    printf("aX + bY = c\n");
    printf("dX + eY = f\n");
    printf("Ingrese a, b, c, d, e, f: ");
    scanf("%f %f %f %f %f %f", &a, &b, &c, &d, &e, &f);
    
    determinante = a*e - b*d;
    
    if (determinante != 0) {
        x = (c*e - b*f) / determinante;
        y = (a*f - c*d) / determinante;
        printf("Solucion unica: X = %.2f, Y = %.2f\n", x, y);
    } else {
        if ((c*e - b*f) == 0 && (a*f - c*d) == 0) {
            printf("Infinitas soluciones\n");
        } else {
            printf("No hay solucion\n");
        }
    }
    
    return 0;
}
