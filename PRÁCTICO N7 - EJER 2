#include <iostream>
#include <string>
using namespace std;

void leerTexto(string &texto) {
    cout << "Ingrese un texto: ";
    getline(cin, texto);
}

int contarPalabras(string texto) {
    int palabras = 0;
    bool enPalabra = false;
    
    for (int i = 0; i < texto.length(); i++) {
        if (texto[i] != ' ' && texto[i] != '\t' && texto[i] != '\n') {
            if (!enPalabra) {
                palabras++;
                enPalabra = true;
            }
        } else {
            enPalabra = false;
        }
    }
    
    return palabras;
}

void mostrarResultado(int palabras) {
    cout << palabras << " palabras" << endl;
}

int main() {
    string texto;
    int palabras;
    
    leerTexto(texto);
    palabras = contarPalabras(texto);
    mostrarResultado(palabras);
    
    return 0;
}
