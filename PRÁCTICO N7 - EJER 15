#include <iostream>
#include <string>
using namespace std;

void leerTexto(string &texto) {
    cout << "Ingrese una palabra o texto: ";
    getline(cin, texto);
}

string aMinusculas(string texto) {
    string resultado = "";
    for (int i = 0; i < texto.length(); i++) {
        if (texto[i] >= 'A' && texto[i] <= 'Z') {
            resultado += texto[i] + 32;  
        } else {
            resultado += texto[i];
        }
    }
    return resultado;
}

bool EsPalindromo(string texto) {
    texto = aMinusculas(texto);
    
    int inicio = 0;
    int fin = texto.length() - 1;
    
    while (inicio < fin) {
        if (texto[inicio] != texto[fin]) {
            return false;  
        }
        inicio++;
        fin--;
    }
    
    return true;  
}

void mostrarResultado(string texto, bool esPalindromo) {
    cout << "\nTexto: \"" << texto << "\"" << endl;
    if (esPalindromo) {
        cout << "Resultado: true (es palindromo)" << endl;
    } else {
        cout << "Resultado: false (no es palindromo)" << endl;
    }
}

int main() {
    string texto;
    bool resultado;
    
    leerTexto(texto);
    resultado = EsPalindromo(texto);
    mostrarResultado(texto, resultado);
    
    return 0;
}
