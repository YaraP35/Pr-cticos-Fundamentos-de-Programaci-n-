#include <stdio.h>
#include <windows.h>  // Solo Windows. En Linux usar "unistd.h" y usleep(1000000)
int main() {
    int h = 0, m = 0, s = 0;
    while(1) {
        system("cls");  // En Linux: system("clear");
        printf("%02d:%02d:%02d\n", h, m, s);
        Sleep(1000);    // Pausa 1 segundo (Windows)
        s++;
        if(s == 60) { s = 0; m++; }
        if(m == 60) { m = 0; h++; }
        if(h == 24) h = 0;
    }
    return 0;
}
