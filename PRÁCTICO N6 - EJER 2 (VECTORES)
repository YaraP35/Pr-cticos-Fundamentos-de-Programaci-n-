#include <iostream>
using namespace std;

float minimo(float vec[], int n) {
    float min = vec[0];
    for (int i = 1; i < n; i++) {
        if (vec[i] < min) {
            min = vec[i];
        }
    }
    return min;
}

int main() {
    int n;
    cout << "Ingrese cantidad de elementos: ";
    cin >> n;
    
    float vec[n];
    cout << "Ingrese los elementos:\n";
    for (int i = 0; i < n; i++) {
        cin >> vec[i];
    }
    
    cout << "Minimo: " << minimo(vec, n) << endl;
    
    return 0;
}
