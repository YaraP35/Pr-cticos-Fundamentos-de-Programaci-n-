#include <iostream>
using namespace std;

void LITERAL(int dia, int mes, int anio) {
    string meses[] = {"", "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio",
                      "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"};
    
    // Convertir año de 2 dígitos a 4 dígitos (asumiendo 1900-1999 si < 100)
    int anioCompleto = anio;
    if (anio < 100) {
        anioCompleto = 1900 + anio;
    }
    
    // Validación básica
    if (mes < 1 || mes > 12) {
        cout << "Mes invalido\n";
        return;
    }
    if (dia < 1 || dia > 31) {
        cout << "Dia invalido\n";
        return;
    }
    
    cout << dia << " de " << meses[mes] << " de " << anioCompleto << endl;
}

int main() {
    int dia, mes, anio;
    
    cout << "Ingrese dia: ";
    if (!(cin >> dia)) return 1;
    cout << "Ingrese mes: ";
    if (!(cin >> mes)) return 1;
    cout << "Ingrese anio: ";
    if (!(cin >> anio)) return 1;
    
    LITERAL(dia, mes, anio);
    
    return 0;
}
